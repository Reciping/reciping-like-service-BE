<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- 절대 경로 설정 -->
    <property name="LOG_PATH" value="${LOG_PATH:-/var/log/reciping/like-service}"/>
    <property name="LOG_FILE" value="like-service-app"/>  <!-- 로그 파일의 이름 -> 나중에 /var/log/reciping/user-service/user-service-app.log로 치환됨 -->

    <!-- 콘솔 로그 Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%X{traceId}] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="CSV_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${LOG_FILE}.csv</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${LOG_FILE}.%d{yyyy-MM-dd}.csv</fileNamePattern>
            <maxHistory>14</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS}\t%level\t%thread\t%logger{36}\t%msg\t%X{traceId}%n</pattern>
        </encoder>
    </appender>

    <appender name="JSON_STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder"/>
    </appender>

    <!-- 커스텀 파일 로그 기반 Appender(LikeController 에 대한 커스텀 파일 로그 기록) -->
    <appender name="LIKE_CONTROLLER_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/LikeController.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/LikeController.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory> <!-- 사인업 : 30일 이상 / 겟마이 프로필 : 14일 / 업데이트마이프로필 : 14일 / 나머지 : 7일 -->
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%X{traceId}] %logger{36} - %msg%n</pattern>
            <immediateFlush>true</immediateFlush>
        </encoder>
    </appender>


    <!-- 루트 로거 -->
    <root level="INFO">
        <appender-ref ref="CSV_FILE"/>          <!-- CSV 로그 (DB용) -->
        <appender-ref ref="JSON_STDOUT"/>     <!-- JSON 로그 (Fluent Bit용) -->
    </root>

    <logger name="ERROR_LOGGER" level="ERROR" additivity="false">
        <appender-ref ref="CSV_FILE"/>
        <appender-ref ref="JSON_STDOUT"/>
    </logger>

    <!-- LikeController 클래스에 대한 로거 -->
    <logger level="INFO"
            name="com.three.recipinglikeservicebe.like.controller.LikeController"
            additivity="false"> <!-- (additivity 는 상위 패키지 로그 전파 여부)-->
        <appender-ref ref="LIKE_CONTROLLER_LOG" />
        <appender-ref ref="JSON_STDOUT" />
    </logger>


</configuration>